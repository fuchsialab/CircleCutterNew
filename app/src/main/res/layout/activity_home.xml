<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:background="#FFFFFF"
    tools:openDrawer="start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <RelativeLayout

        android:gravity="clip_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_marginBottom="180dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:titleTextColor="#ffffff"
            android:background="#025497"
            app:title="Circle Cutter">

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:layout_above="@id/adView"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/crop"
            android:layout_width="150dp"
            android:layout_height="150dp"/>


        <Button
            android:layout_marginTop="5dp"
            android:fontFamily="@font/bold"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/adView"
            android:layout_centerHorizontal="true"
            android:id="@+id/rx_sample_button"
            android:layout_width="250dp"
            android:backgroundTint="#00398E"
            android:textColor="@color/white"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:text="Crop Your Image"
            />
        <TextView
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:id="@+id/text"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rx_sample_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="* Tap on Crop Your Image Button"
            />
        <TextView
            android:fontFamily="@font/regular"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="* Then Allow All Permissions"
            />

        <RelativeLayout

            android:layout_centerInParent="true"
            android:id="@+id/adView"
            android:gravity="clip_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            tools:ignore="MissingConstraints"/>




    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navdrawer"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextColor="@color/colorPrimary"
        android:background="#EFEFF4"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_item"
        android:layout_gravity="start"
        >

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>